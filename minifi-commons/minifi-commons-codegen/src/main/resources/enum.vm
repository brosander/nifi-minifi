package $enum.parent.package;

//CHECKSTYLE:LineLength:OFF
public enum $enum.name {
#foreach($value in $enum.values)
    ${value.replace('.', '_')}("$value")#if($foreach.hasNext), #else;
#end
#end

    private final String name;

    private ${enum.name}(String name) {
        this.name = name;
    }

    public String toString() {
        return name;
    }

    public static $enum.name forName(String name) {
        for($enum.name value : values()) {
            if (value.name.equals#if (!$enum.caseSensitive)IgnoreCase#end(name)) {
                return value;
            }
        }
        throw new IllegalArgumentException("No $enum.name with name " + name + " exits.");
    }
}
